doctype html
html(lang=language)
  head
    block pageTitle
      title This is the page title
    meta(charset="UTF-8")
    link(rel="stylesheet", href="/stylesheets/application.css")
  body
    nav 
      ul
        each country in countries
          li
            a(href=country.path
              class=currentPathClass(country.path, currentPath)
            )
              img.flag(src=`/images/${country.flag}`
                       alt=country.alt
                       title=country.title)
    header
      block greeting
        h1 Hello World!
    main
      block softwareEngineer
